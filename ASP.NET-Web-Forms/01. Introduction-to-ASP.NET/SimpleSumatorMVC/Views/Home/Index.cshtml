@{
    ViewBag.Title = "Home Page";
}

@model SimpleSumatorMVC.Models.SumViewModels

<div class="jumbotron">
   
    <div class="row">
        <div class="col-md-4">
            <h2>Sumator</h2>
            <form id="sumatorForm" method="post">
                @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.FirstNum, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FirstNum, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.SecondNum, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.SecondNum, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <strong>Result: @Model.Sum</strong>

                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Sum" class="btn btn-success" />
                        </div>
                    </div>
                }
            </form>

        </div>

    </div>
</div>

